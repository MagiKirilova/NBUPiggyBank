<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView02"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        tools:context=".Register">

        <ImageView
            android:id="@+id/arrowback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/arrowbacklogin"
            android:layout_alignParentTop="true"
            android:src="@drawable/leftarrow">
        </ImageView>

        <ImageView
            android:id="@+id/piggyRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/piggyregister"
            android:layout_centerHorizontal="true"
            android:src="@drawable/piggyregister1"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/arrowback">
        </ImageView>

        <TextView
            android:id="@+id/nameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/Name"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="5dp"
            android:text="@string/Име"
            android:textAlignment="center"
            android:textColor="@color/black_02"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/piggyRegister"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:minHeight="52dp"
            android:textColorHint="@color/black_02"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            />

        <TextView
            android:id="@+id/EgnLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Name"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="5dp"
            android:layout_marginTop="24dp"
            android:text="@string/ЕГН"
            android:textAlignment="center"
            android:textColor="@color/black_02"
            android:textSize="22sp"  />

        <EditText
            android:id="@+id/Egn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Name"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:minHeight="52dp"
            android:layout_marginTop="50dp"
            android:textColorHint="@color/black_02"
            android:textSize="20sp"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/EmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Egn"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="5dp"
            android:layout_marginTop="24dp"
            android:text="@string/emailLabel"
            android:textAlignment="center"
            android:textColor="@color/black_02"
            android:textSize="22sp"  />

        <EditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Egn"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:minHeight="52dp"
            android:layout_marginTop="50dp"
            android:textColorHint="@color/black_02"
            android:textSize="20sp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/PassLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Email"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="5dp"
            android:layout_marginTop="24dp"
            android:text="@string/passLabel"
            android:textAlignment="center"
            android:textColor="@color/black_02"
            android:textSize="22sp"  />

        <EditText
            android:id="@+id/Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Email"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:minHeight="52dp"
            android:layout_marginTop="50dp"
            android:textColorHint="@color/black_02"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            />

        <Button
            android:id="@+id/registerUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Password"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_button"
            android:text="@string/Регистрация"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:minHeight="52dp"
            android:layout_marginTop="40dp"
            tools:ignore="DuplicateSpeakableTextCheck"/>

    </RelativeLayout>
</ScrollView>
