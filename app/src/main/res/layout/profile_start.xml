<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ScrollView03"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        tools:context=".ProfileOne">

        <LinearLayout
            android:id="@+id/welcomeLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >
        <TextView
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="@string/Hello"
            android:textAlignment="center"
            android:textColor="@color/black_02"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/customerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/Име"
            android:textAlignment="center"
            android:textColor="@color/black_02"
            android:textSize="30sp"
            android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/piggyAuthIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcomeLayout"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/redpandaicon"
            android:src="@drawable/owl3_icon3" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_below="@id/piggyAuthIcon"
            android:layout_marginTop="30dp"
            android:layout_width="400dp"
            android:layout_height="200dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="@color/light_pink"
            >

            <ImageView
                android:id="@+id/visaLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/welcomeLayout"
                android:layout_marginTop="20dp"
                android:layout_marginStart="250dp"
                android:contentDescription="@string/redpandaicon"
                android:src="@drawable/visa_logo1" />

            <ImageView
                android:id="@+id/chipLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/welcomeLayout"
                android:layout_marginTop="46dp"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/redpandaicon"
                android:src="@drawable/chip_logo" />

            <ImageView
                android:id="@+id/contactlessLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="62dp"
                android:layout_marginStart="90dp"
                android:contentDescription="@string/redpandaicon"
                android:src="@drawable/contactless_1" />

            <TextView
                android:id="@+id/cardNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:layout_marginStart="50dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/cardNumber"
                android:textAlignment="center"
                android:textColor="@color/black_02"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</ScrollView>