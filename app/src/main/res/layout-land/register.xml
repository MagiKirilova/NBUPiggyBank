<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView02"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/register_relative_lay_padding"
        tools:context=".Register">

        <LinearLayout
            android:id="@+id/firstLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/secondView"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:paddingStart="@dimen/padding_five"
                android:text="@string/Име"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/land_register_piggy_margin_top"
                android:textColor="@color/black_02"
                android:textSize="@dimen/label_text_size"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:minHeight="@dimen/land_register_edit_text_min_height"
                android:textColorHint="@color/black_02"
                android:textSize="@dimen/edit_text_size"
                tools:ignore="LabelFor,RtlSymmetry"
                android:importantForAutofill="no" />

            <TextView
                android:id="@+id/EmailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_ten"
                android:fontFamily="sans-serif-black"
                android:paddingStart="@dimen/padding_five"
                android:text="@string/emailLabel"
                android:textAlignment="center"
                android:textColor="@color/black_02"
                android:textSize="@dimen/label_text_size"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:minHeight="@dimen/land_register_edit_text_min_height"
                android:textColorHint="@color/black_02"
                android:textSize="@dimen/edit_text_size"
                tools:ignore="LabelFor,RtlSymmetry"
                android:importantForAutofill="no" />

            <TextView
                android:id="@+id/PassLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_ten"
                android:fontFamily="sans-serif-black"
                android:paddingStart="@dimen/padding_five"
                android:text="@string/passLabel"
                android:textAlignment="center"
                android:textColor="@color/black_02"
                android:textSize="@dimen/edit_text_size"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:minHeight="@dimen/land_register_edit_text_min_height"
                android:textColorHint="@color/black_02"
                android:textSize="@dimen/label_text_size"
                tools:ignore="LabelFor,RtlSymmetry,TextFields"
                android:importantForAutofill="no"/>
        </LinearLayout>

        <View
            android:id="@+id/secondView"
            android:layout_width="@dimen/land_register_view_w"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:id="@+id/thirdLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/secondView"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/piggyRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/register_icon_margin_bottom"
                android:contentDescription="@string/piggyregister"
                android:src="@drawable/piggyregister1" />


            <Button
                android:id="@+id/registerUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/land_register_piggy_margin_top"
                android:background="@drawable/rounded_button"
                android:minHeight="@dimen/land_register_edit_text_min_height"
                android:text="@string/createprofile"
                android:textColor="@color/white"
                android:textSize="@dimen/edit_text_size"
                tools:ignore="DuplicateSpeakableTextCheck" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
